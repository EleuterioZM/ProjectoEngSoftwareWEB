<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/universidade?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="Model/Pessoa.hbm.xml"/>
    <mapping resource="Model/Avaliacao.hbm.xml"/>
    <mapping resource="Model/Disciplina.hbm.xml"/>
    <mapping resource="Model/Estudante.hbm.xml"/>
    <mapping resource="Model/Notarealiza.hbm.xml"/>
    <mapping resource="Model/Users.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
